<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#ff00baac"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout
		android:gravity="center"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_margin="15.0dip"
		android:layout_centerHorizontal="true">

		<TextView
			android:textAppearance="?android:textAppearanceLarge"
			android:textSize="42.0sp"
			android:typeface="normal"
			android:textStyle="bold"
			android:textColor="#ffffffff"
			android:gravity="center"
			android:padding="20.0dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/apprestarter"
			android:shadowColor="#90000000"
			android:shadowDx="5.0"
			android:shadowRadius="10.0"/>

	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:padding="20dp"
		android:gravity="center">

		<ImageView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:src="@drawable/restart"
			android:scaleType="fitCenter"
			android:visibility="visible"
			android:layout_margin="5dp"/>

		<ImageView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:src="@drawable/shutdown"
			android:scaleType="fitCenter"
			android:visibility="visible"
			android:layout_margin="5dp"/>

	</LinearLayout>

	<RelativeLayout
		android:gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="15.0dip"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true">

		<TextView
			android:textAppearance="?android:textAppearanceSmall"
			android:textStyle="bold"
			android:textColor="#fffefefe"
			android:gravity="center"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/simplefastholo_material_them"
			android:shadowColor="#77000000"
			android:shadowDy="3.0"
			android:shadowRadius="10.5"/>

	</RelativeLayout>

</RelativeLayout>

